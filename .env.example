# EnvVault Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Frontend Configuration
# ============================================

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Application URL
VITE_APP_URL=http://localhost:5173

# Environment
VITE_ENV=development

# ============================================
# Backend Configuration (Supabase)
# ============================================

# Database URL (for migrations)
SUPABASE_DB_URL=postgresql://postgres:[password]@db.your-project.supabase.co:5432/postgres

# Supabase Access Token (for CLI)
SUPABASE_ACCESS_TOKEN=your-access-token

# ============================================
# CI/CD Secrets (GitHub Actions)
# ============================================

# These should be set as GitHub Secrets, not in .env

# Frontend Deployment
# VITE_SUPABASE_URL=<production-url>
# VITE_SUPABASE_ANON_KEY=<production-anon-key>

# Backend Deployment
# SUPABASE_DB_URL=<production-db-url>
# SUPABASE_ACCESS_TOKEN=<access-token>

# External Services
# VERCEL_TOKEN=<vercel-deployment-token>
# SLACK_WEBHOOK_URL=<slack-notifications>
# SENTRY_AUTH_TOKEN=<sentry-releases>

# Distribution
# HOMEBREW_TAP_TOKEN=<github-pat-for-homebrew>
# NPM_TOKEN=<npm-publish-token>

# ============================================
# Monitoring (Optional)
# ============================================

# Sentry
# VITE_SENTRY_DSN=https://...@sentry.io/...
# SENTRY_ORG=your-org
# SENTRY_PROJECT=envvault

# PostHog Analytics
# VITE_POSTHOG_KEY=phc_...
# VITE_POSTHOG_HOST=https://app.posthog.com

# ============================================
# Email Service (Optional)
# ============================================

# Resend API Key
# RESEND_API_KEY=re_...

# ============================================
# Payment Processing (Optional)
# ============================================

# Stripe
# VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# Development Tools
# ============================================

# Enable debug logging
# DEBUG=true

# Disable telemetry
# DISABLE_TELEMETRY=true
